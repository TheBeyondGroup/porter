{
  "name": "porter",
  "version": "0.1.0",
  "description": "A storefront framework for Shopify",
  "author": "Jeffrey Guenther <guenther.jeffrey@gmail.com>",
  "license": "MIT",
  "bin": {
    "porter": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "Shopify",
    "theme",
    "storefront"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "oclif": {
    "bin": "porter",
    "dirname": "porter",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "repositoryPrefix": "<%- repo %>/tree/main/src/<%- commandPath %>",
    "topicSeparator": " "
  },
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^3.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "mocha": "^10",
    "oclif": "^3.17.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && ./bin/generate-readme.sh",
    "prepare": "husky install",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": "./lib/index.js"
}
